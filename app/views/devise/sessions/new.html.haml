.panel.panel-default.devise-bs
  .panel-heading
    %h4= t('.sign_in', default: 'Sign in')
  .panel-body.col-md-offset-3
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f|
      .form-group
        = f.label :email, class: 'badge badge-pill info-color-dark size-text'
        = f.email_field :email, autofocus: true, class: 'form-control col-lg-3', placeholder: 'example@ex.com'
      .form-group
        = f.label :password, class: 'badge badge-pill info-color-dark size-text'
        = f.password_field :password, autocomplete: 'off', class: 'form-control col-lg-3'
      - if devise_mapping.rememberable?
        .checkbox
          = f.label :remember_me do
            = f.check_box :remember_me
            = t('.remember_me', default: 'Remember me')
      = f.submit  t('.sign_in', default: 'Sign in'), class: 'btn success-color-dark'
= render 'devise/shared/links'
